		stats gfeh_dft mean sigma kurt
		echo [Fe/H] $mean $sigma $kurt (log(g) selected)
		
		stats_med gfeh_df mean sigma
		set gfeh_dft = gfeh_df if (abs(gfeh_df-$mean)<5*$sigma)
		stats gfeh_dft mean sigma kurt
		echo [Fe/H] $mean $sigma $kurt
		
		e reset_x11

		define y_gutter 0.8
		define x_gutter 1.0
		
		ex $default_ex  
		window 1 3 1 3 limits 4400 6600 -0.16 0.16 
		ex $small_ex 
		ltype 3 blu hline $gfeh_sousa_err hline -$gfeh_sousa_err ltype 0
		nero points teff_inp gfeh_df
		rosso   hline $sigma    hline -$sigma
		
		nero box
		xlabel T_{\rm eff}
		ylabel \Delta [{\rm Fe/H}]

		ex $default_ex  
 		window 1 3 1 2 limits 3.7 5.0  -0.16 0.16 
		ex $small_ex 
		ltype 3 blu hline $gfeh_sousa_err hline -$gfeh_sousa_err ltype 0
		nero points logg_inp gfeh_df
		rosso   hline $sigma    hline -$sigma
		
		nero box
		xlabel log~{\it g}
		ylabel \Delta [{\rm Fe/H}]

		ex $default_ex  
		window 1 3 1 1 limits -1.3 0.5 -0.16 0.16  
		ex $small_ex 
		ltype 3 blu hline $gfeh_sousa_err hline -$gfeh_sousa_err ltype 0
		nero points gfeh_inp gfeh_df
		rosso   hline $sigma    hline -$sigma
		
		nero box
		xlabel [{\rm Fe/H}]
		ylabel \Delta [{\rm Fe/H}]

 		define y_gutter 1.0
		ex $default_ex  
		
		
